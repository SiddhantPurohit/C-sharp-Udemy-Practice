                @Html.EditorFor(model => model.Salad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Salad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cheese, htmlAttributes: new { @class = "control-label col-md-2" })
